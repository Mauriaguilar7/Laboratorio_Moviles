<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLayout"
    tools:context=".ui.movie.billboardFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/billboard"
        android:textSize="32dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_StarWars"
        android:layout_width="335dp"
        android:layout_height="125dp"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="@color/cardLayout"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="125dp">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="105dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="9dp"
                app:srcCompat="@drawable/star_wars">
            </ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="22dp"
            android:text="@string/movie1"
            android:textColor="@color/white"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="70dp"
            android:text="@string/calificacion1"
            android:textColor="@color/calification"
            android:textSize="16dp">
        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="335dp"
        android:layout_height="125dp"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="@color/cardLayout"

        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_StarWars">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="125dp">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="105dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="9dp"
                app:srcCompat="@drawable/harry_potter">

            </ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="22dp"
            android:text="@string/movie2"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="70dp"
            android:text="@string/calificacion2"
            android:textColor="@color/calification"
            android:textSize="16dp">
        </TextView>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:contentDescription="@string/agregar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint= "@color/buttonColor"
        app:srcCompat="@android:drawable/ic_input_add"/>




</androidx.constraintlayout.widget.ConstraintLayout>